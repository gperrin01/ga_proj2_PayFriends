<header>
  <h2>Pay Friends</h2>

  <h4><%= current_user.name %> => To Pay <%= current_user.to_pay %> To Receive <%= current_user.to_receive %></h4>
</header>

<div id="quick_adds">

  <%= form_for @deal_new do |form| %>   
    <%= form.label "Quick Deal" %>
    <%= form.text_field :amount, placeholder: "Amount" %>

    <%= form.select :payer, options_from_collection_for_select(@users, "id", "name"), prompt: 'Payer' %>
    <%= form.select :receiver, options_from_collection_for_select(@users, "id", "name"), prompt: 'Receiver' %>

    <%= form.text_field :description %>

    <%= form.submit 'Submit' %>
  <% end %>

<!-- NEED TO RENAME THE FORM ID   because new_uuser is already taken by the login stuffs-->
  <%= form_for @user_new, :html => { :id => "new_friend" } do |form| %>
    <%= form.text_field :name, placeholder: "Friend's name" %>
    <%= form.submit 'New friend' %>
  <% end %>

</div>

<div id="quick_menu">
  <ul>
    <li><a href="">Pending</a></li>
    <li><a href="">Friends</a></li>
    <li><a href="">To Pay</a></li>
    <li><a href="">To Receive</a></li>
    <li><a href="">History</a></li>
  </ul>
</div>

<div id="view_zone">

<div id="pending_deals" class="sub_zone">
  <h4>Pending Deals</h4>

  <% @pending.each do |deal| %>

  <ul class='indiv_deal_box'>
    <li class="indiv_deal_details"> <%= link_to "#{deal.long_description(current_user)}", '#' %></li>
    <% if deal.payer.name != current_user.name  %>
      <li class='indiv_deal_pay'><button class="pay_button" data-id=<%= deal.id %>>Pay</button></li>
    <% end %>
  </ul>

  <% end %>
</div>

<div id="history" class="sub_zone hidden">
  <h4>History of Deals</h4>

  <ul class='indiv_deal_box'>
  <%# @history.each do |deal| %>
    <li class="indiv_deal_details"> <%#=
       deal.long_description %></li>
  <%# end %>
  </ul>
</div>

</div>
