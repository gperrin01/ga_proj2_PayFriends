<!DOCTYPE html>
<html>
<head>
  <title>I O U</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="main_container">

<% flash.each do |name, msg| %>
  <div class="flash-message flash-message-<% name %>">
    <%= msg %>
  </div>
<% end %>

<% if current_user %>
  <p id='login_mini_msg'>Logged in as <%= current_user.name %> | <%= link_to 'Log out', logout_path %></p>
<% else %>
  <p>Please log in</p>
  <p><%= link_to 'log in', new_session_path %></p>
  <p><%= link_to 'sign up', new_user_path %></p>
<% end %>
  
    <%= yield %>

</div>
</body>
</html>
